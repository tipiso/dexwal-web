---
import Button from '@components/Button.astro';
import Product from '../Product.astro';

const { sectionLabel, linkProducts } = Astro.props;
const products = [
  {
    image: '/images/zwijacz.png',
    title: 'Akumulatorowy zwijacz do węży',
  },
  {
    image: '/images/tragarz.png',
    title: 'Platforma bagażowa TRAGARZ 300',
  },
  {
    image: '/images/platforma.png',
    title: 'Platforma gaśniczo/ chłodnicza do samochodów elektrycznych',
  },
];
---

<style>
  .productSection {
    padding: 32px 80px;

    h2 {
      padding-bottom: 24px;
    }

    .button {
      margin: 30px auto 0;
    }
  }

  .productsWrapper {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .linkWrapper {
    width: 100%;
    text-align: center;
  }
</style>

<div class="productSection">
  {sectionLabel && <h2 class="secondaryTitle">{sectionLabel}</h2>}
  <div class="productsWrapper">{products.map((p) => <Product image={p.image} title={p.title} />)}</div>
  {
    linkProducts && (
      <div class="linkWrapper">
        <Button label="Zobacz inne produkty z naszej oferty" type="outline" />
      </div>
    )
  }
</div>
