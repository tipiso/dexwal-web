---
import Product from '../Product.astro';

const { sectionLabel } = Astro.props;
const products = [
  {
    image: '/images/zwijacz.png',
    title: 'Akumulatorowy zwijacz do węży',
  },
  {
    image: '/images/tragarz.png',
    title: 'Platforma bagażowa TRAGARZ 300',
  },
  {
    image: '/images/platforma.png',
    title: 'Platforma gaśniczo/ chłodnicza do samochodów elektrycznych',
  },
];
---

<style>
  .productSection {
    padding: 32px 80px;

    h2 {
      padding-bottom: 24px;
    }
  }

  .productsWrapper {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
  }
</style>

<div class="productSection">
  {sectionLabel && <h2 class="secondaryTitle">{sectionLabel}</h2>}
  <div class="productsWrapper">{products.map((p) => <Product image={p.image} title={p.title} />)}</div>
</div>
