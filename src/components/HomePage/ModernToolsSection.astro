---
import { getTranslations } from "../../locale/getTranslations";
const locale = Astro.currentLocale;
const t = getTranslations(locale).homepage.modernToolsSection;
---

<style>
  .modernToolsSection {
    display: flex;
    gap: 48px;
  }

  .whiteSpace {
    height: 190px;
    background-color: var(--white-color);
    width: 100%;
  }

  .secondaryTitle {
    padding-bottom: 16px;
  }

  .imageContainer img {
    width: 100%;
    height: auto;
    border-bottom-right-radius: 40px;
    object-fit: cover;
  }

  .content {
    flex: 1 1 55%;
    min-width: 300px;
  }

  .imgWrapper {
    position: relative;
    bottom: 60px;
  }
</style>

<div class="whiteSpace"></div>
<section class="modernToolsSection sectionBreak">
  <div class="imgWrapper">
    <img src="/images/modern-tools.avif" alt={t.altPhoto} />
  </div>
  <article class="content">
    <h2 class="secondaryTitle">{t.heading}</h2>
    <p class="primaryText">
      {t.text}
    </p>
  </article>
</section>
