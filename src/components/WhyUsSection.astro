<style>
  .why-us-section {
    display: flex;
    gap: 48px;
  }

  .image-container {
    position: relative;
    min-width: 300px;
  }

  .image-container img {
    width: 100%;
    height: auto;
    border-top-right-radius: 40px;
    object-fit: cover;
  }

  .overlay-box {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    bottom: 0;
    right: 0;
    background: var(--bg-color);
    font-size: 1.5rem;
    font-weight: bold;
    padding: 70px;
  }

  .overlay-box .highlight {
    --highlight-font-size: 110px;
    color: var(--primary-color);
    font-size: var(--highlight-font-size);
  }

  .experienceText {
    max-width: 106px;
    margin-left: 16px;
  }

  .content {
    flex: 1 1 55%;
    min-width: 300px;
  }

  .content h2 {
    margin-bottom: 1.5rem;
  }

  .content ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .content li {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .content .number {
    color: #d52100;
    font-size: 2rem;
    font-weight: bold;
    flex-shrink: 0;
  }

  .content h3 {
    margin: 0;
  }

  .content p {
    margin: 0.5rem 0 0 0;
    color: #444;
  }
</style>

