---
import { getTranslations } from "@src/locale/getTranslations";
const locale = Astro.currentLocale;
const t = getTranslations(locale).aboutUsPage;
import { Image } from "astro:assets";
---

<style>
  /* Middle Section */
  .middleSection {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .middleImg {
    background-color: var(--text-color);
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  .middleText {
    margin-top: auto;
    padding: 25px 50px 0;
    background-color: var(--text-color);

    p {
      color: var(--white-color);
      padding-bottom: 25px;
    }
  }

  @media (max-width: 1025px) {
    .middleSection {
      grid-template-columns: 1fr;
    }

    .middleText {
      order: -1;
      padding: 40px 32px;
    }
  }
</style>

<section class="middleSection">
  <div class="middleImg">
    <Image
      src="/images/about-hose.avif"
      alt={t.secondSection.altText}
      width={720}
      height={555}
    />
  </div>
  <div class="middleText">
    <p class="primaryText">
      {t.secondSection.sectionFirstText}
    </p>
    <p class="primaryText">
      {t.secondSection.sectionSecondText}
    </p>
  </div>
</section>
