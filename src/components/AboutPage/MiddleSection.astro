---
import { getTranslations } from "@src/locale/getTranslations";
const locale = Astro.currentLocale;
const t = getTranslations(locale).aboutUsPage;
---

<style>
  /* Middle Section */
  .middleSection {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .middleImg {
    background-color: var(--text-color);
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  .middleText {
    margin-top: auto;
    padding: 25px 50px 0;
    background-color: var(--text-color);

    p {
      color: var(--white-color);
      padding-bottom: 25px;
    }
  }

  @media (max-width: 1025px) {
    .middleText {
      padding: 40px 20px;
    }
  }
</style>

<section class="middleSection">
  <div class="middleImg">
    <img src="/images/about-hose.avif" alt="Pracownik z wyposaÅ¼eniem" />
  </div>
  <div class="middleText">
    <p class="primaryText">
      {t.secondSection.sectionFirstText}
    </p>
    <p class="primaryText">
      {t.secondSection.sectionSecondText}
    </p>
  </div>
</section>
