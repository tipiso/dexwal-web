---
import Layout from "@layouts/Layout.astro";
import ContactDetails from "@components/ContactPage/ContactDetails.astro";
import ContactSection from "@components/ContactPage/ContactSection.astro";
import HeaderSection from "@components/ContactPage/HeaderSection.astro";
import ContentWrapper from "@components/ContactPage/ContentWrapper.astro";
import MapSection from "@components/ContactPage/MapSection.astro";
import { AppLangEnum } from "@src/lib/types";

export async function getStaticPaths() {
  const supportedLocales = Object.values(AppLangEnum).map((l) => l);
  return supportedLocales.map((lang) => ({
    params: { lang },
  }));
}

import { getTranslations } from "@src/locale/getTranslations";
const locale = Astro.currentLocale;
const t = getTranslations(locale);
const pageTitle = t.contactPage.pageTitle;
---

<Layout title={pageTitle}>
  <ContentWrapper>
    <HeaderSection />

    <ContactSection />

    <ContactDetails />

    <MapSection />
  </ContentWrapper>
</Layout>
