---
import ContactUsSection from "@components/ContactUsSection.astro";
import ProductSection from "@components/HomePage/ProductSection.astro";
import Layout from "@layouts/Layout.astro";
import { AppLangEnum } from "@src/lib/types";

export async function getStaticPaths() {
  const supportedLocales = Object.values(AppLangEnum).map((l) => l);
  return supportedLocales.map((lang) => ({
    params: { lang },
  }));
}
import { getTranslations } from "@src/locale/getTranslations";
const locale = Astro.currentLocale;
const t = getTranslations(locale);
const pageTitle = t.offerPage.pageTitle;
---

<style>
  .headerWrapper {
    display: flex;
    position: relative;
    justify-content: flex-end;
  }

  .mainTitle {
    position: absolute;
    text-align: center;
    color: var(--white-color);
    background-color: var(--text-color);
    padding: 80px 0;
    width: 940px;
    margin: auto 0;
    left: 0;
    bottom: -40px;
  }

  .heroImg {
    object-fit: cover;
    object-position: top;
  }
</style>

<Layout pageTitle={pageTitle}>
  <header class="headerWrapper sectionBreak">
    <h1 class="mainTitle">{t.offerPage.pageHeading}</h1>
    <img
      src="/images/offers-hero.avif"
      alt={t.offerPage.headerAltImgText}
      class="heroImg"
    />
  </header>

  <section class="sectionBreak">
    <ProductSection sectionLabel="Platformy" />
    <ProductSection sectionLabel="Wsporniki" />
    <ProductSection sectionLabel="Inne produkty" />
  </section>

  <ContactUsSection classes="sectionBreak" />
</Layout>
