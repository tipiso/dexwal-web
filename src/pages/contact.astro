---
import ContactForm from '@components/ContactForm.astro';
import Layout from '../layouts/Layout.astro';

// Contact details array
const contactDetails = [
  {
    label: 'Adres',
    lines: ['ul. Dąbrowska 12', '28-100 Busko-Zdrój'],
  },
  {
    label: 'Email',
    lines: ['poczta@dexwal.com'],
  },
  {
    label: 'Telefon',
    lines: ['+48 41 378 70 11'],
  },
  {
    label: 'Godziny pracy',
    lines: ['Poniedziałek-Piątek: 8:00-16:00'],
  },
];
---

<style>
  /* Contact Section */
  .contactSection {
    padding: 24px 80px;
    background-color: var(--white-color);
  }

  .contactDataSection {
    padding: 40px 80px;
  }

  .contentWrapper {
    position: relative;
  }

  .contactContent {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .contactHeader {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    padding: 80px;
    background-color: var(--text-color);
  }

  .contactHeader h1 {
    color: var(--white-color);
    padding-bottom: 8px;
  }

  .contactHeader p {
    color: var(--white-color);
  }

  /* Contact Details */
  .contactDetails {
    margin-top: 40px;
  }

  .contactDetails h2 {
    margin-bottom: 16px;
  }

  .detailsContainer {
    display: flex;
    justify-content: space-between;
    grid-column: 1 / -1;
  }

  .detailsInfo {
    flex: 1;
  }

  .detailItem {
    display: flex;
    margin-bottom: 8px;
  }

  /* Contact Image */
  .contactImage {
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    max-width: 622px;
    max-height: 1000px;
  }

  .contactImage img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-top-left-radius: 40px;
  }

  /* Map Section */
  .mapSection {
    width: 100%;
    height: 450px;
  }

  .mapContainer {
    width: 100%;
    height: 100%;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .contactContent {
      grid-template-columns: 1fr;
    }

    .contactImage {
      display: none;
    }

    .detailsContainer {
      flex-direction: column;
    }

    .contactPerson {
      margin-top: 20px;
    }
  }
</style>

<Layout title="Dexwal - Kontakt">
  <main class="contentWrapper">
    <header class="contactHeader">
      <div>
        <h1 class="mainTitle">Skontaktuj się z nami</h1>
        <p class="primaryText">Odezwij się do nas, postaramy się odezwać w ciągu najbliższych 24 godzin.</p>
      </div>
      <div class="imgPlaceholder"></div>
    </header>
    <section class="contactSection">
      <div class="container">
        <div class="contactContent">
          <div class="contactFormContainer">
            <div class="contactDetails">
              <ContactForm />
            </div>

            <div class="contactImage">
              <img src="/images/contact-hero.avif" alt="Strażak z wężem strażackim" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="contactDataSection">
      <h2 class="secondaryTitle">Dane kontaktowe</h2>
      <div class="detailsContainer">
        <div class="detailsInfo">
          {
            contactDetails.map((detail) => (
              <div class="detailItem">
                <div class="detailContent">
                  {detail.lines.map((line) => (
                    <p class="primaryText">{line}</p>
                  ))}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Google Maps Section -->
    <section class="mapSection">
      <div class="mapContainer">
        <iframe
          width="100%"
          height="450"
          frameborder="0"
          scrolling="no"
          marginheight="0"
          marginwidth="0"
          src="https://maps.google.com/maps?width=100%25&height=600&hl=en&q=28-100,%20Dobrowoda%2012%20%20+(Dexwal)&t=&z=14&ie=UTF8&iwloc=B&output=embed"
        >
        </iframe>
      </div>
    </section>
  </main>
</Layout>
