---
import ContactUsSection from '@components/HomePage/ContactUsSection.astro';
import ProductSection from '@components/HomePage/ProductSection.astro';
import Layout from '@layouts/Layout.astro';
---

<style>
  .headerWrapper {
    display: flex;
    position: relative;
    justify-content: flex-end;
  }

  .mainTitle {
    position: absolute;
    text-align: center;
    color: var(--white-color);
    background-color: var(--text-color);
    padding: 80px 0;
    width: 940px;
    margin: auto 0;
    left: 0;
    bottom: -40px;
  }

  .heroImg {
    object-fit: cover;
    object-position: top;
  }
</style>

<Layout pageTitle="Offer" language="pl">
  <header class="headerWrapper sectionBreak">
    <h1 class="mainTitle">Sprawdź naszą ofertę sprzętu</h1>
    <img src="/images/offers-hero.avif" alt="Firefighter" class="heroImg" />
  </header>

  <section class="sectionBreak">
    <ProductSection sectionLabel="Platformy" />
    <ProductSection sectionLabel="Wsporniki" />
    <ProductSection sectionLabel="Inne produkty" />
  </section>

  <ContactUsSection classes="sectionBreak" />
</Layout>
